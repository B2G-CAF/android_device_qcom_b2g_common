if [ -n "$3" ]; then
	bootstrap="<em:bootstrap>true</em:bootstrap>"
fi

cat >$1 <<!END
<?xml version="1.0"?>
<RDF xmlns="http://www.w3.org/1999/02/22-rdf-syntax-ns#"
     xmlns:em="http://www.mozilla.org/2004/em-rdf#">
  <Description about="urn:mozilla:install-manifest">

    <!-- UUID of the extension.  Must match the directory name that contains this file -->
    <em:id>$2</em:id>

    ${bootstrap}

    <!-- Extension version -->
    <em:version>0.0.1.20120405</em:version>

    <em:targetApplication>
      <Description>
        <!-- UUID of the B2G program -->
        <em:id>{3c2e2abc-06d4-11e1-ac3b-374f68613e61}</em:id>

        <!-- Accept any 14 major version.  Current version is 14.0a1 (from /system/b2g/application.ini) -->
        <em:minVersion>14.-1</em:minVersion>
        <em:maxVersion>14.*</em:maxVersion>
      </Description>
    </em:targetApplication>
  </Description>
</RDF>
!END
